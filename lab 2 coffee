    scanf("%d",&i);
    if(i==3)
        break;  
    else if (i==1)
       {
        int a;
        printf("1. Espresso"); 
        scanf("%d",&a);
             
       
       }
    else  if (i==2){
        int b
        printf(" 1. Check current number of ingredients. %d\n", i);
        scanf("%d",&b);

    }  
  }
